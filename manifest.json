{
    "description": "Demonstrating webRequests",
    "manifest_version": 2,
    "name": "webRequest-demo",
    "version": "1.0",

    "permissions": [
        "webRequest",
        "cookies",
        "webRequestBlocking",
        "storage",
        "tabs",
        "<all_urls>"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "waterproofpatch@gmail.com",
            "strict_min_version": "42.0"
        }
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": {
            "19": "icons/border-48.png"
        },
        "default_title": "Click me"
    }
}